<h1 class="homepage-label">Home Page</h1>
{{#if posts.length}}

{{#each posts as |post|}}
<div class="card all-forms homeblogs">
  <h5 class="card-header homepagePost">
    <a href="/post/{{post.id}}">{{post.title}}</a>
    <p>Created By: {{user.username}}</p>
  </h5>
  <div class="card-body">
    <p class="card-text">
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
</div>
{{/if}}
</div>

